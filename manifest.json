{
  "manifest_version": 3,
  "name": "Shopee Review Downloader",
  "version": "4.1.0",
  "description": "Download Shopee reviews dan product images (main & varian dengan nama varian).",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.susercontent.com/*",
    "*://*.shopee.co.id/*",
    "*://*.xiapibuy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopee Review Downloader"
  },
  "content_scripts": [
    {
      "matches": [
        "*://shopee.co.id/*",
        "*://*.xiapibuy.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
